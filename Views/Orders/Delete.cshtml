@model applicationmvc.Models.Order

@{
    ViewData["Title"] = "Удаление заказа";
}

<div>
    <h4>Удаление заказа</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderSum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderSum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.StoreName)
        </dd>
    </dl>

    <h4>Товары в заказе</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Название товара</th>
                <th>Цена</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productOrder in Model.ProductOrders)
            {
                <tr>
                    <td>@productOrder.Product.Name</td>
                    <td>@productOrder.Product.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
